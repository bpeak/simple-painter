{
    "name": "simple-painter",
    "version": "0.2.6",
    "main": "dist/index.js",
    "umd:main": "dist/index.umd.js",
    "source": "src/index.ts",
    "types": "dist/index.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "start": "parcel example/index.html",
        "build": "rm -rf dist && microbundle build && webpack",
        "deploy": "parcel build example/index.html --no-source-maps --public-url ./ && gh-pages -d dist",
        "lint": "eslint 'src/**/*.ts'",
        "lint-fix": "eslint --fix 'src/**/*.ts'",
        "precommit-msg": "echo 'Pre-commit checks(lint, test)...' && exit 0"
    },
    "repository": "https://github.com/goldenthumb/simple-painter.git",
    "homepage": "https://github.com/goldenthumb/simple-painter/",
    "author": "goldenthumb <cyh8914@gmail.com>",
    "license": "MIT",
    "devDependencies": {
        "@babel/core": "^7.10.3",
        "@babel/plugin-proposal-class-properties": "^7.10.1",
        "@babel/plugin-transform-runtime": "^7.10.3",
        "@babel/preset-env": "^7.10.3",
        "@babel/preset-typescript": "^7.10.1",
        "babel-loader": "^8.1.0",
        "eslint": "^7.3.1",
        "eslint-config-goldenthumb": "^0.0.16",
        "gh-pages": "^2.2.0",
        "microbundle": "^0.11.0",
        "parcel-bundler": "^1.12.4",
        "pre-commit": "^1.2.2",
        "typescript": "^3.8.3",
        "webpack": "^4.43.0",
        "webpack-cli": "^3.3.12"
    },
    "pre-commit": [
        "precommit-msg",
        "lint"
    ],
    "eslintConfig": {
        "extends": "goldenthumb/typescript"
    },
    "eslintIgnore": [
        "dist"
    ]
}