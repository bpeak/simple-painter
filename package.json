{
    "name": "simple-painter",
    "version": "0.1.1",
    "main": "dist/index.js",
    "umd:main": "dist/index.umd.js",
    "module": "dist/index.m.js",
    "source": "src/index.ts",
    "types": "dist/index.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "start": "parcel example/index.html",
        "build": "rm -rf dist && microbundle build",
        "deploy": "parcel build example/index.html --no-source-maps --public-url ./ && gh-pages -d dist",
        "test": "jest"
    },
    "repository": "https://github.com/goldenthumb/simple-painter.git",
    "homepage": "https://github.com/goldenthumb/simple-painter/",
    "author": "goldenthumb <cyh8914@gmail.com>",
    "license": "MIT",
    "devDependencies": {
        "@types/jest": "^25.2.1",
        "eslint": "^6.8.0",
        "eslint-config-goldenthumb": "^0.0.11",
        "gh-pages": "^2.2.0",
        "jest": "^25.3.0",
        "jest-canvas-mock": "^2.2.0",
        "microbundle": "^0.11.0",
        "parcel-bundler": "^1.12.4",
        "ts-jest": "^25.3.1",
        "typescript": "^3.8.3"
    },
    "eslintConfig": {
        "extends": "goldenthumb/typescript"
    },
    "eslintIgnore": [
        "dist"
    ],
    "jest": {
        "transform": {
            "^.+\\.ts$": "ts-jest"
        },
        "setupFiles": [
            "jest-canvas-mock"
        ]
    }
}
